<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:smartForm="sap.ui.comp.smartform"
	xmlns:smartField="sap.ui.comp.smartfield"
	xmlns:smartTable="sap.ui.comp.smarttable"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	 <Dialog  title ="{i18n>AddICD}"  >
	 <customHeader>
            <Toolbar>
                <content>
                    <Title text ="{i18n>AddICD}"></Title>
                    <ToolbarSpacer/>
                    <Button icon = "{=${uiModel>/formEdit} ? 'sap-icon://display' : 'sap-icon://edit'}" press = "toggleEdit"></Button>
                </content>
            </Toolbar>
        </customHeader>
		<smartForm:SmartForm validationMode="Async" editable="{uiModel>/editable}" class="sapUxAPObjectPageSubSectionAlignContent">
			<smartForm:layout>
				<smartForm:ColumnLayout columnsM="2" columnsL="2" columnsXL="4" />
			</smartForm:layout>
			<smartForm:Group>
				<!-- <smartForm:GroupElement>
					<smartField:SmartField value="{SitemasterRef}" />
				</smartForm:GroupElement> -->
				<smartForm:GroupElement>
					<smartField:SmartField value="{Sitecode}" editable = "{uiModel>/formEdit}"/>
				</smartForm:GroupElement>
				<smartForm:GroupElement>
					<smartField:SmartField value="{Sitename}" editable = "{uiModel>/formEdit}"/>
				</smartForm:GroupElement>
				<smartForm:GroupElement>
					<smartField:SmartField value="{ChapterID}" editable = "{uiModel>/formEdit}"/>
				</smartForm:GroupElement>
				<smartForm:GroupElement>
					<smartField:SmartField value="{ChapterIDDescription}" editable = "{uiModel>/formEdit}"/>
				</smartForm:GroupElement>
				<smartForm:GroupElement>
					<smartField:SmartField value="{Level2}" editable = "{uiModel>/formEdit}" />
				</smartForm:GroupElement>
				<smartForm:GroupElement>
					<smartField:SmartField value="{Level2Description}" editable = "{uiModel>/formEdit}"/>
				</smartForm:GroupElement>
				<smartForm:GroupElement>
					<smartField:SmartField value="{Level3}" editable = "{uiModel>/formEdit}"/>
				</smartForm:GroupElement>
				<smartForm:GroupElement>
					<smartField:SmartField value="{Level3Description}" editable = "{uiModel>/formEdit}"/>
				</smartForm:GroupElement>
				<smartForm:GroupElement>
					<smartField:SmartField value="{Level4}" editable = "{uiModel>/formEdit}"/>
				</smartForm:GroupElement>
				<smartForm:GroupElement>
					<smartField:SmartField value="{Level4Description}" editable = "{uiModel>/formEdit}"/>
				</smartForm:GroupElement>
			</smartForm:Group>
		</smartForm:SmartForm>
        <footer>
            <Toolbar>
                <content>
                    <!-- <Button visible="{=${messageModel>/messages}.length > 0 ? true : false }" icon="sap-icon://alert" type="Critical" press=".handleMessagePopoverPress" ariaHasPopup="Dialog" /> -->
                    <ToolbarSpacer />
                    <Button type="Emphasized" text="Save" press=".saveICD" visible="{=${uiModel>/formEdit} ? true : false}"/>
                    <Button text="Cancel" press=".cancel" ariaHasPopup="Dialog" />
                </content>
            </Toolbar>
        </footer>
    </Dialog>
</core:FragmentDefinition>    