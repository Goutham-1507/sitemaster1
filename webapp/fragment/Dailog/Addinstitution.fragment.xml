<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:smartForm="sap.ui.comp.smartform"
    xmlns:smartField="sap.ui.comp.smartfield"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
  <Dialog  title ="{i18n>Addinstitution}"  >
        <smartForm:SmartForm validationMode="Async" editable="{uiModel>/editable}" class="sapUxAPObjectPageSubSectionAlignContent">
            <smartForm:layout>
                <smartForm:ColumnLayout columnsM="2" columnsL="2" columnsXL="4" />
            </smartForm:layout>
            <smartForm:Group>
                <smartForm:GroupElement>
                    <smartField:SmartField value="{SitemasterRef}" />
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField value="{Sitecode}" />
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField value="{Sitename}" />
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField value="{EquipmentTypeReference}" />
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField value="{EquipmentMappingRef}" />
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField value="{Language}" />
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField value="{EquipmentTypeID}" />
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField value="{EquipmentType}" />
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField value="{EquipmentName}" />
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField value="{Status}" />
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField value="{EquipmentSerialNumber}" />
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField value="{EquipmentBrandName}" />
                </smartForm:GroupElement>
            </smartForm:Group>
        </smartForm:SmartForm>
        <footer>
            <Toolbar>
                <content>
                    <!-- <Button visible="{=${messageModel>/messages}.length > 0 ? true : false }" icon="sap-icon://alert" type="Critical" press=".handleMessagePopoverPress" ariaHasPopup="Dialog" /> -->
                    <ToolbarSpacer />
                    <Button type="Emphasized" text="Save" press=".saveinstitution" />
                    <Button text="Cancel" press=".cancel" ariaHasPopup="Dialog" />
                </content>
            </Toolbar>
        </footer>
    </Dialog>
</core:FragmentDefinition>    