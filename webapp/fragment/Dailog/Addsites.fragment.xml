<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:smartForm="sap.ui.comp.smartform"
    xmlns:smartField="sap.ui.comp.smartfield"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
    <Dialog  title ="{i18n>Addsite}">
        <customHeader>
            <Toolbar>
                <content>
                    <Title text ="{i18n>Addsite}"></Title>
                    <ToolbarSpacer/>
                    <Button icon = "{=${uiModel>/formEdit} ? 'sap-icon://display' : 'sap-icon://edit'}" press = "toggleEdit"></Button>
                </content>
            </Toolbar>
        </customHeader>
        <VBox>
            <smartForm:SmartForm validationMode="Async" editable="{uiModel>/editable}" class="sapUxAPObjectPageSubSectionAlignContent">
                <smartForm:layout>
                    <smartForm:ColumnLayout columnsM="2" columnsL="2" columnsXL="4" />
                </smartForm:layout>
                <smartForm:Group>
                    <smartForm:GroupElement>
                        <smartField:SmartField value="{Language}" editable = "{uiModel>/formEdit}"/>
                    </smartForm:GroupElement>
                    <smartForm:GroupElement>
                        <smartField:SmartField value="{SiteCode}" editable = "{uiModel>/formEdit}"/>
                    </smartForm:GroupElement>
                    <smartForm:GroupElement>
                        <smartField:SmartField value="{SiteName}" editable = "{uiModel>/formEdit}"/>
                    </smartForm:GroupElement>
                    <smartForm:GroupElement>
                        <smartField:SmartField value="{InstitutionCode}" editable = "{uiModel>/formEdit}"/>
                    </smartForm:GroupElement>

                </smartForm:Group>
            </smartForm:SmartForm>
            <smartForm:SmartForm validationMode="Async" title="Correspondence Address" editable="{uiModel>/editable}" class="sapUxAPObjectPageSubSectionAlignContent">
                <smartForm:layout>
                    <smartForm:ColumnLayout columnsM="2" columnsL="2" columnsXL="4" />
                </smartForm:layout>
        <smartForm:Group>
            <smartForm:GroupElement>
                <smartField:SmartField value="{Address1}" editable = "{uiModel>/formEdit}"/>
            </smartForm:GroupElement>
            <smartForm:GroupElement>
                <smartField:SmartField value="{Address2}" editable = "{uiModel>/formEdit}"/>
            </smartForm:GroupElement>
            <smartForm:GroupElement>
                <smartField:SmartField value="{Address3}" editable = "{uiModel>/formEdit}"/>
            </smartForm:GroupElement>
            <smartForm:GroupElement>
                <smartField:SmartField value="{Address4}" editable = "{uiModel>/formEdit}" />
            </smartForm:GroupElement>
            <smartForm:GroupElement>
                <smartField:SmartField value="{City}" editable = "{uiModel>/formEdit}"/>
            </smartForm:GroupElement>
            <smartForm:GroupElement>
                <smartField:SmartField value="{District}" editable = "{uiModel>/formEdit}"/>
            </smartForm:GroupElement>
            <smartForm:GroupElement>
                <smartField:SmartField value="{Country}" editable = "{uiModel>/formEdit}"/>
            </smartForm:GroupElement>
            <smartForm:GroupElement>
                <smartField:SmartField value="{Region}" editable = "{uiModel>/formEdit}"/>
            </smartForm:GroupElement>
            <smartForm:GroupElement>
                <smartField:SmartField value="{Zipcode}" editable = "{uiModel>/formEdit}"/>
            </smartForm:GroupElement>
            <smartForm:GroupElement>
                <smartField:SmartField value="{Website}" editable = "{uiModel>/formEdit}"/>
            </smartForm:GroupElement>
        </smartForm:Group>
    </smartForm:SmartForm>
    <Title level="Auto" text="Communication"></Title>

    <smartTable:SmartTable id="SiteSMOContactDetailsTable" entitySet="SiteSMOContacts" tableBindingPath="to_SITESMOD" tableType="ResponsiveTable" useVariantManagement="false" useTablePersonalisation="false" enableAutoBinding="true" enableExport="false" header="SMO Contact Details" class="sapUiResponsiveContentPadding sapUxAPObjectPageSubSectionAlignContent" editable="{uiModel>/editable}" app:useSmartField="true" ignoredFields="Guid,SiteGuidRef,CreatedBy,CreatedOn,ChangedBy,ChangedOn,DeleteIndicator"  initiallyVisibleFields="Employeename,Role,Officetelephone,Extension,Mobilenum,EmailID,Remarks">
        <smartTable:customToolbar>
            <Toolbar>
                <ToolbarSpacer />
                <Button icon="sap-icon://add" visible="{uiModel>/editable}" press="onAddPress" />
            </Toolbar>
        </smartTable:customToolbar>
        <Table id="SiteSMOContactDetails" mode="{= (${uiModel>/editable} ? 'Delete' : 'None')}" delete="DelRecord"/>
    </smartTable:SmartTable>

    <smartTable:SmartTable id="SiteContactDetailsTable" entitySet="SiteContactD" tableBindingPath="to_SITECONTD" tableType="ResponsiveTable" useVariantManagement="false" useTablePersonalisation="false" enableAutoBinding="true" enableExport="false" header="Site Contact Details" class="sapUiResponsiveContentPadding sapUxAPObjectPageSubSectionAlignContent" editable="{uiModel>/editable}" app:useSmartField="true" ignoredFields="Guid,SiteGuidRefCreatedBy,CreatedOn,ChangedBy,ChangedOn,Deleteind" initiallyVisibleFields="Employeename,Role,Officetelephone,Extension,Mobilenum,EmailID,Remarks">
        <smartTable:customToolbar>
            <Toolbar>
                <ToolbarSpacer />
                <Button icon="sap-icon://add" visible="{uiModel>/editable}" press="onAddPress" />
            </Toolbar>
        </smartTable:customToolbar>
        <Table id="SiteContactDetails" mode="{= (${uiModel>/editable} ? 'Delete' : 'None')}" delete="DelRecord"/>
    </smartTable:SmartTable>




    <smartForm:SmartForm validationMode="Async" title="Notes" editable="{uiModel>/editable}" class="sapUxAPObjectPageSubSectionAlignContent">
        <smartForm:layout>
            <smartForm:ColumnLayout columnsM="2" columnsL="2" columnsXL="4" />
        </smartForm:layout>
        <smartForm:Group>
            <smartForm:GroupElement>
                <smartField:SmartField value="{Remarks}" editable = "{uiModel>/formEdit}"/>
            </smartForm:GroupElement>
        </smartForm:Group>
    </smartForm:SmartForm>
</VBox>
<footer>
    <Toolbar>
        <content>
            <!-- <Button visible="{=${messageModel>/messages}.length > 0 ? true : false }" icon="sap-icon://alert" type="Critical" press=".handleMessagePopoverPress" ariaHasPopup="Dialog" /> -->
            <ToolbarSpacer />
            <Button type="Emphasized" text="Save" press=".savesites" visible="{=${uiModel>/formEdit} ? true : false}" />
            <Button text="Cancel" press=".cancel" ariaHasPopup="Dialog" />
        </content>
    </Toolbar>
</footer>
</Dialog>

</core:FragmentDefinition>