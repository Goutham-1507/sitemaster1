<core:FragmentDefinition xmlns:f="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:ux="sap.uxap"
    xmlns:smartVariant="sap.ui.comp.smartvariants"
    xmlns:smartfilterbar="sap.ui.comp.smartfilterbar"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
    <!-- <Text text = "ello"/> -->
    <smartVariant:SmartVariantManagement id="idSitesSVM" entitySet="SITEMASTER" useFavorites="true" showShare="true" showExecuteOnSelection="true" />
    <smartfilterbar:SmartFilterBar id="idSitesSFB" entitySet="SITEMASTER" smartVariant="idSitesSVM" persistencyKey="SitesSFB_key" filterChange="onFilterChange" />
    <smartTable:SmartTable id="idSites" entitySet="SITEMASTER" tableType="ResponsiveTable" useVariantManagement="false" useTablePersonalisation="true" enableAutoBinding="true" enableExport="false" header="" class="sapUiResponsiveContentPadding sapUxAPObjectPageSubSectionAlignContent"  persistencyKey="SitesSFB_key" app:useSmartField="true" initiallyVisibleFields="Language,SiteCode,SiteName,LegalName,InstitutionCode,ContactPerson,Address1,Address2,Address3,Address4,City,District,Region,Zipcode,
Country,OfficeTelephone,Extension,MobileTelephone,Email,Website">
        <smartTable:customToolbar>
            <Toolbar>
                <ToolbarSpacer />
                <Button icon="sap-icon://add" visible="{uiModel>/editable}" press="onAddSites" />
            </Toolbar>
        </smartTable:customToolbar>
        <Table id="idtbSites" itemPress="sitesDetPress" mode="{= (${uiModel>/editable} ? 'Delete' : 'None')}" delete="onDeleteTableRow">
            <items>
                <ColumnListItem type="Active"/>
            </items>
        </Table>
    </smartTable:SmartTable>
</core:FragmentDefinition>